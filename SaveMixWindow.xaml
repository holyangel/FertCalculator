<!-- SaveMixWindow.xaml -->
<Window x:Class="FertilizerCalculator.SaveMixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Mix" Height="225" Width="400"
        Background="#1E1E1E">
    <Window.Resources>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Save Mix" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Mix name input -->
        <TextBlock Grid.Row="1" Text="Enter a name for this mix:"/>
        <TextBox Grid.Row="2" x:Name="MixNameTextBox" Margin="0,5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Width="100" Height="25" Click="CancelButton_Click" Background="#505050"/>
            <Button Content="Save" Width="100" Height="25" Click="SaveButton_Click" Margin="10,3,3,3"/>
        </StackPanel>
    </Grid>
</Window>