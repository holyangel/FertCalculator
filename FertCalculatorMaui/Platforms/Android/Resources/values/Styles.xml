<?xml version="1.0" encoding="utf-8" ?> 

<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/PrimaryDarkText</item>
    </style>

    <style name="CollectionViewStyle">
        <item name="android:background">#00000000</item> <!-- Transparent -->
    </style>

    <style name="CollectionViewItemStyle">
        <item name="android:background">#00000000</item> <!-- Transparent -->
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="EntryTextStyle">
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">44dp</item>
        <item name="android:inputType">number</item>
        <!-- Removed android:hintTextColor to avoid linking error -->
    </style>

    <style name="CheckBoxLabelStyle">
        <item name="android:textColor">@color/Black</item> <!-- Updated reference -->
        <item name="android:fontFamily">OpenSansRegular</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
