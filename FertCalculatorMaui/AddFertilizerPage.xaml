<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FertCalculatorMaui.ViewModels"
             x:Class="FertCalculatorMaui.AddFertilizerPage"
             x:Name="AddFertilizerPageRoot"
             Title="Add Fertilizer">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Fertilizer Name" />
            <Entry Text="{Binding BindingContext.Name, Source={x:Reference AddFertilizerPageRoot}}" Placeholder="Enter fertilizer name" Margin="0,0,0,10" />

            <Label Text="Nitrogen (%)" />
            <Entry Text="{Binding BindingContext.NitrogenPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter nitrogen percentage" Margin="0,0,0,10" />

            <Label Text="Phosphorus (%)" />
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Entry Text="{Binding BindingContext.OriginalPhosphorusValue, Source={x:Reference AddFertilizerPageRoot}}" Grid.Column="0" Keyboard="Numeric" Placeholder="Enter phosphorus percentage" />
                <CheckBox IsChecked="{Binding BindingContext.IsPhosphorusInOxideForm, Source={x:Reference AddFertilizerPageRoot}}" Grid.Column="1" />
                <Label Text="P₂O₅" Grid.Column="1" VerticalOptions="Center" Margin="0,0,10,0" Style="{StaticResource CheckBoxLabelStyle}" />
            </Grid>

            <Label Text="Potassium (%)" />
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Entry Text="{Binding BindingContext.OriginalPotassiumValue, Source={x:Reference AddFertilizerPageRoot}}" Grid.Column="0" Keyboard="Numeric" Placeholder="Enter potassium percentage" />
                <CheckBox IsChecked="{Binding BindingContext.IsPotassiumInOxideForm, Source={x:Reference AddFertilizerPageRoot}}" Grid.Column="1" />
                <Label Text="K₂O" Grid.Column="1" VerticalOptions="Center" Margin="0,0,10,0" Style="{StaticResource CheckBoxLabelStyle}" />
            </Grid>

            <Label Text="Calcium (%)" />
            <Entry Text="{Binding BindingContext.CalciumPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter calcium percentage" Margin="0,0,0,10" />

            <Label Text="Magnesium (%)" />
            <Entry Text="{Binding BindingContext.MagnesiumPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter magnesium percentage" Margin="0,0,0,10" />

            <Label Text="Sulfur (%)" />
            <Entry Text="{Binding BindingContext.SulfurPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter sulfur percentage" Margin="0,0,0,10" />

            <Label Text="Boron (%)" />
            <Entry Text="{Binding BindingContext.BoronPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter boron percentage" Margin="0,0,0,10" />

            <Label Text="Copper (%)" />
            <Entry Text="{Binding BindingContext.CopperPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter copper percentage" Margin="0,0,0,10" />

            <Label Text="Iron (%)" />
            <Entry Text="{Binding BindingContext.IronPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter iron percentage" Margin="0,0,0,10" />

            <Label Text="Manganese (%)" />
            <Entry Text="{Binding BindingContext.ManganesePercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter manganese percentage" Margin="0,0,0,10" />

            <Label Text="Molybdenum (%)" />
            <Entry Text="{Binding BindingContext.MolybdenumPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter molybdenum percentage" Margin="0,0,0,10" />

            <Label Text="Zinc (%)" />
            <Entry Text="{Binding BindingContext.ZincPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter zinc percentage" Margin="0,0,0,10" />

            <Label Text="Chlorine (%)" />
            <Entry Text="{Binding BindingContext.ChlorinePercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter chlorine percentage" Margin="0,0,0,10" />

            <Label Text="Silica (%)" />
            <Entry Text="{Binding BindingContext.SilicaPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter silica percentage" Margin="0,0,0,10" />

            <Label Text="Humic Acid (%)" />
            <Entry Text="{Binding BindingContext.HumicAcidPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter humic acid percentage" Margin="0,0,0,10" />

            <Label Text="Fulvic Acid (%)" />
            <Entry Text="{Binding BindingContext.FulvicAcidPercent, Source={x:Reference AddFertilizerPageRoot}}" Keyboard="Numeric" Placeholder="Enter fulvic acid percentage" Margin="0,0,0,10" />

            <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                <Button Text="Save" Command="{Binding BindingContext.SaveCommand, Source={x:Reference AddFertilizerPageRoot}}" HorizontalOptions="FillAndExpand" Style="{StaticResource ButtonStyle}" Padding="10,5"/>
                <Button Text="Cancel" Command="{Binding BindingContext.CancelCommand, Source={x:Reference AddFertilizerPageRoot}}" HorizontalOptions="FillAndExpand" Style="{StaticResource ButtonStyle}" Padding="10,5"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
