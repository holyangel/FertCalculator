<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FertCalculatorMaui"
             x:Class="FertCalculatorMaui.AddFertilizerPage"
             x:DataType="local:AddFertilizerPage"
             Title="Add Fertilizer">
    
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="Fertilizer Details" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
            
            <Label Text="Fertilizer Name" />
            <Entry x:Name="NameEntry" Placeholder="Enter fertilizer name" />
            
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" Margin="0,10,0,0">
                <Label Text="Nitrogen (N)" Grid.Row="0" Grid.Column="0" />
                <Entry x:Name="NitrogenEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="0" Grid.Column="1" />
                
                <Label Text="Phosphorus" Grid.Row="1" Grid.Column="0" />
                <Entry x:Name="PhosphorusEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="1" Grid.Column="1" />
                <HorizontalStackLayout Grid.Row="1" Grid.Column="2">
                    <CheckBox x:Name="PhosphorusOxideCheckbox" />
                    <Label Text="P₂O₅" VerticalOptions="Center" />
                </HorizontalStackLayout>
                
                <Label Text="Potassium" Grid.Row="2" Grid.Column="0" />
                <Entry x:Name="PotassiumEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="2" Grid.Column="1" />
                <HorizontalStackLayout Grid.Row="2" Grid.Column="2">
                    <CheckBox x:Name="PotassiumOxideCheckbox" />
                    <Label Text="K₂O" VerticalOptions="Center" />
                </HorizontalStackLayout>
                
                <Label Text="Calcium (Ca)" Grid.Row="3" Grid.Column="0" />
                <Entry x:Name="CalciumEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="3" Grid.Column="1" />
                
                <Label Text="Magnesium (Mg)" Grid.Row="4" Grid.Column="0" />
                <Entry x:Name="MagnesiumEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="4" Grid.Column="1" />
                
                <Label Text="Sulfur (S)" Grid.Row="5" Grid.Column="0" />
                <Entry x:Name="SulfurEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="5" Grid.Column="1" />
            </Grid>
            
            <Label Text="Micronutrients" FontSize="16" FontAttributes="Bold" Margin="0,20,0,0" />
            
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" Margin="0,10,0,0">
                <Label Text="Boron (B)" Grid.Row="0" Grid.Column="0" />
                <Entry x:Name="BoronEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="0" Grid.Column="1" />
                
                <Label Text="Copper (Cu)" Grid.Row="1" Grid.Column="0" />
                <Entry x:Name="CopperEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="1" Grid.Column="1" />
                
                <Label Text="Iron (Fe)" Grid.Row="2" Grid.Column="0" />
                <Entry x:Name="IronEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="2" Grid.Column="1" />
                
                <Label Text="Manganese (Mn)" Grid.Row="3" Grid.Column="0" />
                <Entry x:Name="ManganeseEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="3" Grid.Column="1" />
                
                <Label Text="Molybdenum (Mo)" Grid.Row="4" Grid.Column="0" />
                <Entry x:Name="MolybdenumEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="4" Grid.Column="1" />
                
                <Label Text="Zinc (Zn)" Grid.Row="5" Grid.Column="0" />
                <Entry x:Name="ZincEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="5" Grid.Column="1" />
            </Grid>
            
            <Label Text="Additional Nutrients" FontSize="16" FontAttributes="Bold" Margin="0,20,0,0" />
            
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" Margin="0,10,0,0">
                <Label Text="Chlorine (Cl)" Grid.Row="0" Grid.Column="0" />
                <Entry x:Name="ChlorineEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="0" Grid.Column="1" />
                
                <Label Text="Silica (Si)" Grid.Row="1" Grid.Column="0" />
                <Entry x:Name="SilicaEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="1" Grid.Column="1" />
                
                <Label Text="Humic Acid" Grid.Row="2" Grid.Column="0" />
                <Entry x:Name="HumicAcidEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="2" Grid.Column="1" />
                
                <Label Text="Fulvic Acid" Grid.Row="3" Grid.Column="0" />
                <Entry x:Name="FulvicAcidEntry" Placeholder="%" Keyboard="Numeric" Grid.Row="3" Grid.Column="1" />
            </Grid>
            
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,30,0,0">
                <Button Text="Save" Clicked="OnSaveClicked" WidthRequest="100" />
                <Button Text="Cancel" Clicked="OnCancelClicked" WidthRequest="100" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
