<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FertCalculatorMaui.ViewModels"
             x:Class="FertCalculatorMaui.AddFertilizerPage"
             x:DataType="viewmodels:AddFertilizerViewModel"
             Title="Add Fertilizer">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Fertilizer Name" />
            <Entry Text="{Binding Name}" Placeholder="Enter fertilizer name" Margin="0,0,0,10" />

            <Label Text="Nitrogen (%)" />
            <Entry Text="{Binding NitrogenPercent}" Keyboard="Numeric" Placeholder="Enter nitrogen percentage" Margin="0,0,0,10" />

            <Label Text="Phosphorus (%)" />
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Entry Text="{Binding OriginalPhosphorusValue}" Grid.Column="0" Keyboard="Numeric" Placeholder="Enter phosphorus percentage" />
                <CheckBox IsChecked="{Binding IsPhosphorusInOxideForm}" Grid.Column="1" />
                <Label Text="P₂O₅" Grid.Column="1" VerticalOptions="Center" Margin="0,0,10,0" />
            </Grid>

            <Label Text="Potassium (%)" />
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                <Entry Text="{Binding OriginalPotassiumValue}" Grid.Column="0" Keyboard="Numeric" Placeholder="Enter potassium percentage" />
                <CheckBox IsChecked="{Binding IsPotassiumInOxideForm}" Grid.Column="1" />
                <Label Text="K₂O" Grid.Column="1" VerticalOptions="Center" Margin="0,0,10,0" />
            </Grid>

            <Label Text="Calcium (%)" />
            <Entry Text="{Binding CalciumPercent}" Keyboard="Numeric" Placeholder="Enter calcium percentage" Margin="0,0,0,10" />

            <Label Text="Magnesium (%)" />
            <Entry Text="{Binding MagnesiumPercent}" Keyboard="Numeric" Placeholder="Enter magnesium percentage" Margin="0,0,0,10" />

            <Label Text="Sulfur (%)" />
            <Entry Text="{Binding SulfurPercent}" Keyboard="Numeric" Placeholder="Enter sulfur percentage" Margin="0,0,0,10" />

            <Label Text="Boron (%)" />
            <Entry Text="{Binding BoronPercent}" Keyboard="Numeric" Placeholder="Enter boron percentage" Margin="0,0,0,10" />

            <Label Text="Copper (%)" />
            <Entry Text="{Binding CopperPercent}" Keyboard="Numeric" Placeholder="Enter copper percentage" Margin="0,0,0,10" />

            <Label Text="Iron (%)" />
            <Entry Text="{Binding IronPercent}" Keyboard="Numeric" Placeholder="Enter iron percentage" Margin="0,0,0,10" />

            <Label Text="Manganese (%)" />
            <Entry Text="{Binding ManganesePercent}" Keyboard="Numeric" Placeholder="Enter manganese percentage" Margin="0,0,0,10" />

            <Label Text="Molybdenum (%)" />
            <Entry Text="{Binding MolybdenumPercent}" Keyboard="Numeric" Placeholder="Enter molybdenum percentage" Margin="0,0,0,10" />

            <Label Text="Zinc (%)" />
            <Entry Text="{Binding ZincPercent}" Keyboard="Numeric" Placeholder="Enter zinc percentage" Margin="0,0,0,10" />

            <Label Text="Chlorine (%)" />
            <Entry Text="{Binding ChlorinePercent}" Keyboard="Numeric" Placeholder="Enter chlorine percentage" Margin="0,0,0,10" />

            <Label Text="Silica (%)" />
            <Entry Text="{Binding SilicaPercent}" Keyboard="Numeric" Placeholder="Enter silica percentage" Margin="0,0,0,10" />

            <Label Text="Humic Acid (%)" />
            <Entry Text="{Binding HumicAcidPercent}" Keyboard="Numeric" Placeholder="Enter humic acid percentage" Margin="0,0,0,10" />

            <Label Text="Fulvic Acid (%)" />
            <Entry Text="{Binding FulvicAcidPercent}" Keyboard="Numeric" Placeholder="Enter fulvic acid percentage" Margin="0,0,0,10" />

            <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand" />
                <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
