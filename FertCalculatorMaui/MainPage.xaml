<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FertCalculatorMaui.MainPage"
             Title="Fertilizer Calculator v1.0">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" Padding="10">
        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Spacing="5" Margin="5" x:Name="CurrentMixSection">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Current Mix" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" />
                <Button Text="â–¼" 
                        Clicked="OnToggleMixVisibilityClicked" 
                        x:Name="ToggleMixVisibilityButton"
                        WidthRequest="40"
                        HeightRequest="35"
                        FontSize="Small" />
            </HorizontalStackLayout>
            
            <HorizontalStackLayout Spacing="2" x:Name="MixButtonsLayout">
                <Button Text="Add Fertilizer to Mix" 
                        Clicked="OnManageFertilizersClicked" 
                        HorizontalOptions="Center"
                        Margin="0,5,0,10" />
                <Button Text="Save Mix" 
                        Clicked="OnSaveMixClicked" 
                        HorizontalOptions="Start" 
                        Margin="0,5,0,10"/>
                <Button Text="Clear Mix" 
                        Clicked="OnClearMixClicked" 
                        HorizontalOptions="Start" 
                        Margin="0,5,0,10"/>
            </HorizontalStackLayout>

            <CollectionView x:Name="MixListView" 
                            SelectionMode="Single"
                            HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,Auto" Padding="5">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnFertilizerTapped" CommandParameter="{Binding FertilizerName}" />
                            </Grid.GestureRecognizers>
                            
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding FertilizerName}" FontAttributes="Bold" />
                            </VerticalStackLayout>

                            <HorizontalStackLayout Grid.Column="1">
                                <Label Text="{Binding Quantity}" HorizontalOptions="Start" />
                                <Label Text=" g/L" x:Name="UnitLabel" />
                            </HorizontalStackLayout>
                            
                            <Button Text="Remove" 
                                    Grid.Column="2" 
                                    CommandParameter="{Binding FertilizerName}" 
                                    Clicked="OnRemoveFromMixClicked" 
                                    WidthRequest="85"
                                    HeightRequest="35"
                                    FontSize="Small" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Metric (per liter)" VerticalOptions="Center" x:Name="UnitsTypeLabel" />
                <Switch IsToggled="{Binding UseImperialUnits}" Toggled="OnUnitsToggled" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
        
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <ScrollView VerticalScrollBarVisibility="Always" HeightRequest="400">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Nutrient Totals" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                        <!-- Headers -->
                        <Label Text="Nutrient" FontAttributes="Bold" Grid.Row="0" Grid.Column="0" />
                        <Label Text="%" FontAttributes="Bold" Grid.Row="0" Grid.Column="1" />
                        <Label Text="PPM (per liter)" FontAttributes="Bold" Grid.Row="0" Grid.Column="2" x:Name="PpmHeaderLabel" />
                        
                        <!-- Nitrogen -->
                        <Label Text="Nitrogen (N)" Grid.Row="1" Grid.Column="0" />
                        <Label Text="{Binding NitrogenPercent}" Grid.Row="1" Grid.Column="1" x:Name="NitrogenPercentLabel" />
                        <Label Text="{Binding NitrogenPpm}" Grid.Row="1" Grid.Column="2" x:Name="NitrogenPpmLabel" />
                        
                        <!-- Phosphorus -->
                        <Label Text="Phosphorus (P)" Grid.Row="2" Grid.Column="0" />
                        <Label Text="{Binding PhosphorusPercent}" Grid.Row="2" Grid.Column="1" x:Name="PhosphorusPercentLabel" />
                        <Label Text="{Binding PhosphorusPpm}" Grid.Row="2" Grid.Column="2" x:Name="PhosphorusPpmLabel" />
                        
                        <!-- Potassium -->
                        <Label Text="Potassium (K)" Grid.Row="3" Grid.Column="0" />
                        <Label Text="{Binding PotassiumPercent}" Grid.Row="3" Grid.Column="1" x:Name="PotassiumPercentLabel" />
                        <Label Text="{Binding PotassiumPpm}" Grid.Row="3" Grid.Column="2" x:Name="PotassiumPpmLabel" />
                        
                        <!-- Calcium -->
                        <Label Text="Calcium (Ca)" Grid.Row="4" Grid.Column="0" />
                        <Label Text="{Binding CalciumPercent}" Grid.Row="4" Grid.Column="1" x:Name="CalciumPercentLabel" />
                        <Label Text="{Binding CalciumPpm}" Grid.Row="4" Grid.Column="2" x:Name="CalciumPpmLabel" />
                        
                        <!-- Magnesium -->
                        <Label Text="Magnesium (Mg)" Grid.Row="5" Grid.Column="0" />
                        <Label Text="{Binding MagnesiumPercent}" Grid.Row="5" Grid.Column="1" x:Name="MagnesiumPercentLabel" />
                        <Label Text="{Binding MagnesiumPpm}" Grid.Row="5" Grid.Column="2" x:Name="MagnesiumPpmLabel" />
                        
                        <!-- Sulfur -->
                        <Label Text="Sulfur (S)" Grid.Row="6" Grid.Column="0" />
                        <Label Text="{Binding SulfurPercent}" Grid.Row="6" Grid.Column="1" x:Name="SulfurPercentLabel" />
                        <Label Text="{Binding SulfurPpm}" Grid.Row="6" Grid.Column="2" x:Name="SulfurPpmLabel" />
                        
                        <!-- Boron -->
                        <Label Text="Boron (B)" Grid.Row="7" Grid.Column="0" />
                        <Label Text="{Binding BoronPercent}" Grid.Row="7" Grid.Column="1" x:Name="BoronPercentLabel" />
                        <Label Text="{Binding BoronPpm}" Grid.Row="7" Grid.Column="2" x:Name="BoronPpmLabel" />
                        
                        <!-- Copper -->
                        <Label Text="Copper (Cu)" Grid.Row="8" Grid.Column="0" />
                        <Label Text="{Binding CopperPercent}" Grid.Row="8" Grid.Column="1" x:Name="CopperPercentLabel" />
                        <Label Text="{Binding CopperPpm}" Grid.Row="8" Grid.Column="2" x:Name="CopperPpmLabel" />
                        
                        <!-- Iron -->
                        <Label Text="Iron (Fe)" Grid.Row="9" Grid.Column="0" />
                        <Label Text="{Binding IronPercent}" Grid.Row="9" Grid.Column="1" x:Name="IronPercentLabel" />
                        <Label Text="{Binding IronPpm}" Grid.Row="9" Grid.Column="2" x:Name="IronPpmLabel" />
                        
                        <!-- Manganese -->
                        <Label Text="Manganese (Mn)" Grid.Row="10" Grid.Column="0" />
                        <Label Text="{Binding ManganesePercent}" Grid.Row="10" Grid.Column="1" x:Name="ManganesePercentLabel" />
                        <Label Text="{Binding ManganesePpm}" Grid.Row="10" Grid.Column="2" x:Name="ManganesePpmLabel" />
                        
                        <!-- Molybdenum -->
                        <Label Text="Molybdenum (Mo)" Grid.Row="11" Grid.Column="0" />
                        <Label Text="{Binding MolybdenumPercent}" Grid.Row="11" Grid.Column="1" x:Name="MolybdenumPercentLabel" />
                        <Label Text="{Binding MolybdenumPpm}" Grid.Row="11" Grid.Column="2" x:Name="MolybdenumPpmLabel" />
                        
                        <!-- Zinc -->
                        <Label Text="Zinc (Zn)" Grid.Row="12" Grid.Column="0" />
                        <Label Text="{Binding ZincPercent}" Grid.Row="12" Grid.Column="1" x:Name="ZincPercentLabel" />
                        <Label Text="{Binding ZincPpm}" Grid.Row="12" Grid.Column="2" x:Name="ZincPpmLabel" />
                        
                        <!-- Chlorine -->
                        <Label Text="Chlorine (Cl)" Grid.Row="13" Grid.Column="0" />
                        <Label Text="{Binding ChlorinePercent}" Grid.Row="13" Grid.Column="1" x:Name="ChlorinePercentLabel" />
                        <Label Text="{Binding ChlorinePpm}" Grid.Row="13" Grid.Column="2" x:Name="ChlorinePpmLabel" />
                        
                        <!-- Silica -->
                        <Label Text="Silica (Si)" Grid.Row="14" Grid.Column="0" />
                        <Label Text="{Binding SilicaPercent}" Grid.Row="14" Grid.Column="1" x:Name="SilicaPercentLabel" />
                        <Label Text="{Binding SilicaPpm}" Grid.Row="14" Grid.Column="2" x:Name="SilicaPpmLabel" />
                        
                        <!-- Humic Acid -->
                        <Label Text="Humic Acid" Grid.Row="15" Grid.Column="0" />
                        <Label Text="{Binding HumicAcidPercent}" Grid.Row="15" Grid.Column="1" x:Name="HumicAcidPercentLabel" />
                        <Label Text="{Binding HumicAcidPpm}" Grid.Row="15" Grid.Column="2" x:Name="HumicAcidPpmLabel" />
                        
                        <!-- Fulvic Acid -->
                        <Label Text="Fulvic Acid" Grid.Row="16" Grid.Column="0" />
                        <Label Text="{Binding FulvicAcidPercent}" Grid.Row="16" Grid.Column="1" x:Name="FulvicAcidPercentLabel" />
                        <Label Text="{Binding FulvicAcidPpm}" Grid.Row="16" Grid.Column="2" x:Name="FulvicAcidPpmLabel" />

                        <!-- Total Nutrient -->
                        <Label Text="Total Nutrient" Grid.Row="17" Grid.Column="0" />
                        <Label Text="{Binding TotalNutrientPercent}" Grid.Row="17" Grid.Column="1" x:Name="TotalNutrientPercentLabel" />
                        <Label Text="{Binding TotalNutrientPpm}" Grid.Row="17" Grid.Column="2" x:Name="TotalNutrientPpmLabel" />
                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
