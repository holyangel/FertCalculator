<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FertCalculatorMaui.MainPage"
             Title="Fertilizer Calculator v1.0">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*" Padding="10">
        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5" Margin="5">
            <Label Text="Available Fertilizers" FontSize="16" FontAttributes="Bold" />
            <CollectionView x:Name="FertilizerListView" 
                            SelectionMode="Single" 
                            SelectionChanged="OnFertilizerSelected"
                            HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5">
                            <Label Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <Button Text="Add New Fertilizer" 
                    Clicked="OnAddFertilizerClicked" 
                    Margin="0,10,0,0" />
        </VerticalStackLayout>
        
        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5" Margin="5">
            <Label Text="Current Mix" FontSize="16" FontAttributes="Bold" />
            <CollectionView x:Name="MixListView" 
                            SelectionMode="Single"
                            HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,Auto" Padding="5">
                            <Label Text="{Binding FertilizerName}" Grid.Column="0" VerticalOptions="Center" />
                            <HorizontalStackLayout Grid.Column="1" Spacing="5">
                                <Entry Text="{Binding Quantity}" 
                                       WidthRequest="70"
                                       Keyboard="Numeric"
                                       Completed="OnQuantityChanged" />
                                <Label Text="g/L" VerticalOptions="Center" x:Name="UnitLabel" />
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <Button Text="Remove Selected" 
                    Clicked="OnRemoveFertilizerClicked" 
                    Margin="0,10,0,0" />
        </VerticalStackLayout>
        
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <ScrollView>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Nutrient Totals" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                    
                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" Margin="5">
                        <Label Text="Nutrient" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" />
                        <Label Text="%" Grid.Row="0" Grid.Column="1" FontAttributes="Bold" HorizontalOptions="Center" />
                        <Label x:Name="PpmHeaderLabel" Text="PPM" Grid.Row="0" Grid.Column="2" FontAttributes="Bold" HorizontalOptions="Center" />
                    
                        <Label Text="Nitrogen (N)" Grid.Row="1" Grid.Column="0" />
                        <Label x:Name="NitrogenPercentLabel" Text="0.00" Grid.Row="1" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="NitrogenPpmLabel" Text="0.00" Grid.Row="1" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Phosphorus (P)" Grid.Row="2" Grid.Column="0" />
                        <Label x:Name="PhosphorusPercentLabel" Text="0.00" Grid.Row="2" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="PhosphorusPpmLabel" Text="0.00" Grid.Row="2" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Potassium (K)" Grid.Row="3" Grid.Column="0" />
                        <Label x:Name="PotassiumPercentLabel" Text="0.00" Grid.Row="3" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="PotassiumPpmLabel" Text="0.00" Grid.Row="3" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Calcium (Ca)" Grid.Row="4" Grid.Column="0" />
                        <Label x:Name="CalciumPercentLabel" Text="0.00" Grid.Row="4" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="CalciumPpmLabel" Text="0.00" Grid.Row="4" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Magnesium (Mg)" Grid.Row="5" Grid.Column="0" />
                        <Label x:Name="MagnesiumPercentLabel" Text="0.00" Grid.Row="5" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="MagnesiumPpmLabel" Text="0.00" Grid.Row="5" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Sulfur (S)" Grid.Row="6" Grid.Column="0" />
                        <Label x:Name="SulfurPercentLabel" Text="0.00" Grid.Row="6" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="SulfurPpmLabel" Text="0.00" Grid.Row="6" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Boron (B)" Grid.Row="7" Grid.Column="0" />
                        <Label x:Name="BoronPercentLabel" Text="0.00" Grid.Row="7" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="BoronPpmLabel" Text="0.00" Grid.Row="7" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Copper (Cu)" Grid.Row="8" Grid.Column="0" />
                        <Label x:Name="CopperPercentLabel" Text="0.00" Grid.Row="8" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="CopperPpmLabel" Text="0.00" Grid.Row="8" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Iron (Fe)" Grid.Row="9" Grid.Column="0" />
                        <Label x:Name="IronPercentLabel" Text="0.00" Grid.Row="9" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="IronPpmLabel" Text="0.00" Grid.Row="9" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Manganese (Mn)" Grid.Row="10" Grid.Column="0" />
                        <Label x:Name="ManganesePercentLabel" Text="0.00" Grid.Row="10" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="ManganesePpmLabel" Text="0.00" Grid.Row="10" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Molybdenum (Mo)" Grid.Row="11" Grid.Column="0" />
                        <Label x:Name="MolybdenumPercentLabel" Text="0.00" Grid.Row="11" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="MolybdenumPpmLabel" Text="0.00" Grid.Row="11" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Zinc (Zn)" Grid.Row="12" Grid.Column="0" />
                        <Label x:Name="ZincPercentLabel" Text="0.00" Grid.Row="12" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="ZincPpmLabel" Text="0.00" Grid.Row="12" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Chlorine (Cl)" Grid.Row="13" Grid.Column="0" />
                        <Label x:Name="ChlorinePercentLabel" Text="0.00" Grid.Row="13" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="ChlorinePpmLabel" Text="0.00" Grid.Row="13" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Silica (Si)" Grid.Row="14" Grid.Column="0" />
                        <Label x:Name="SilicaPercentLabel" Text="0.00" Grid.Row="14" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="SilicaPpmLabel" Text="0.00" Grid.Row="14" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Humic Acid" Grid.Row="15" Grid.Column="0" />
                        <Label x:Name="HumicAcidPercentLabel" Text="0.00" Grid.Row="15" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="HumicAcidPpmLabel" Text="0.00" Grid.Row="15" Grid.Column="2" HorizontalOptions="Center" />
                        
                        <Label Text="Fulvic Acid" Grid.Row="16" Grid.Column="0" />
                        <Label x:Name="FulvicAcidPercentLabel" Text="0.00" Grid.Row="16" Grid.Column="1" HorizontalOptions="Center" />
                        <Label x:Name="FulvicAcidPpmLabel" Text="0.00" Grid.Row="16" Grid.Column="2" HorizontalOptions="Center" />
                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
        
        <VerticalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Spacing="10">
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Save Mix" Clicked="OnSaveMixClicked" />
                <Button Text="Load Mix" Clicked="OnLoadMixClicked" />
                <Button Text="Clear Mix" Clicked="OnClearMixClicked" />
            </HorizontalStackLayout>
            
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Picker x:Name="MixPicker" WidthRequest="200" Title="Select Mix" Margin="0,5,0,0" />
                <Button Text="Compare Mixes" Clicked="OnCompareMixesClicked" />
                <Button Text="Import" Clicked="OnImportClicked" />
                <Button Text="Export" Clicked="OnExportClicked" />
            </HorizontalStackLayout>
            
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Metric Units (per liter)" VerticalOptions="Center" x:Name="UnitsTypeLabel" />
                <Switch IsToggled="{Binding UseImperialUnits}" Toggled="OnUnitsToggled" />
            </HorizontalStackLayout>
            
            <Label Text="Tap a fertilizer name to add it to your mix. Double-tap items in the mix to remove them." 
                  HorizontalOptions="Center" 
                  FontSize="Caption" 
                  TextColor="Gray"
                  Margin="0,5,0,0" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
