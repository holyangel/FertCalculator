<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FertCalculatorMaui"
             x:Class="FertCalculatorMaui.ManageFertilizersPage"
             x:DataType="local:ManageFertilizersPage"
             Title="Manage Fertilizers">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="5">
            <Label Text="Available Fertilizers" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
            <Button Text="Add New Fertilizer" 
                    Clicked="OnAddFertilizerClicked" 
                    HorizontalOptions="Center"
                    Margin="0,0,0,10" />
        </VerticalStackLayout>
        
        <CollectionView x:Name="FertilizerListView" 
                        Grid.Row="1"
                        SelectionMode="Single"
                        SelectionChanged="OnFertilizerSelectionChanged"
                        Margin="5">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="55,*,Auto" Padding="10">
                        <Button Grid.Column="0" 
                                CommandParameter="{Binding Name}"
                                Clicked="OnEditFertilizerClicked"
                                Margin="0,0,5,0"
                                Scale=".7">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons"
                                                 Glyph="&#xe254;"
                                                 Color="White" />
                            </Button.ImageSource>
                        </Button>

                        <Label Text="{Binding Name}"  Grid.Column="1"
                               VerticalOptions="Center" 
                               FontSize="16" />

                        <Button Grid.Column="2" 
                                CommandParameter="{Binding Name}"
                                Clicked="OnAddToMixClicked"
                                Margin="5,0,0,0">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons"
                                                 Glyph="&#xe800;"
                                                 Color="White" />
                            </Button.ImageSource>
                        </Button>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="5">
            <Button Text="Remove Selected Fertilizer" 
                    Clicked="OnRemoveFertilizerClicked"
                    IsEnabled="{Binding Source={x:Reference FertilizerListView}, Path=SelectedItem, Converter={StaticResource NullToBoolConverter}}"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0" />
            <Button Text="Back to Mix" 
                    Clicked="OnBackToMixClicked"
                    HorizontalOptions="Center"
                    Margin="0,10,0,0" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
