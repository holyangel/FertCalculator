<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FertCalculatorMaui"
             x:Class="FertCalculatorMaui.ManageFertilizersPage"
             x:DataType="local:ManageFertilizersViewModel"
             x:Name="ManagePage"
             Title="Manage Fertilizers">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="5">
            <Label Text="Available Fertilizers" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
            <Button Text="Add New Fertilizer" 
                    Clicked="OnAddFertilizerClicked"
                    HorizontalOptions="Center"
                    Margin="0,0,0,10" />
        </VerticalStackLayout>
        
        <CollectionView x:Name="FertilizerListView" 
                        Grid.Row="1"
                        ItemsSource="{Binding AvailableFertilizers}"
                        SelectedItem="{Binding SelectedFertilizer}"
                        SelectionMode="Single"
                        SelectionChanged="OnFertilizerSelectionChanged"
                        Margin="5">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Fertilizer">
                    <Grid ColumnDefinitions="55,*,Auto,Auto" Padding="10">
                        <Button Grid.Column="0" 
                                CommandParameter="{Binding Name}"
                                Clicked="OnEditFertilizerClicked"
                                Margin="0,0,5,0"
                                Scale=".7">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons"
                                                 Glyph="&#xe254;"
                                                 Color="White" />
                            </Button.ImageSource>
                        </Button>

                        <Label Text="{Binding Name}" Grid.Column="1"
                               VerticalOptions="Center" 
                               FontSize="16" />

                        <Button Grid.Column="2" 
                                CommandParameter="{Binding Name}"
                                Clicked="OnAddToMixClicked"
                                Margin="5,0,0,0">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons"
                                                 Glyph="&#xe800;"
                                                 Color="White" />
                            </Button.ImageSource>
                        </Button>
                        
                        <Button Grid.Column="3" 
                                CommandParameter="{Binding}"
                                Clicked="OnDeleteFertilizerClicked"
                                Margin="5,0,0,0"
                                BackgroundColor="Red">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons"
                                                 Glyph="&#xe872;"
                                                 Color="White" />
                            </Button.ImageSource>
                        </Button>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <Button Grid.Row="2" 
                Text="Back to Main Page" 
                Command="{Binding BackToMixCommand}"
                HorizontalOptions="Center"
                Margin="0,10,0,0" />
    </Grid>
</ContentPage>
